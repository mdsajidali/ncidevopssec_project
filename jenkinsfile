pipeline {
    agent any

    environment {
        DEPLOY_HOST = 'https://ec2-3-255-137-150.eu-west-1.compute.amazonaws.com/'
        DEPLOY_USER = 'ec2-user'
        DEPLOY_KEY = credentials('ec2 ssh creds') // SSH key credentials stored in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull code from GitHub
                git 'https://github.com/mdsajidali/ncidevopssec_project'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Lint Code') {
            steps {
                // Run pylint for code quality checks
                sh 'pylint expenses/'
            }
        }

        stage('Package Application') {
            steps {
                // Package application as a .tar.gz file
                sh 'tar -czvf expense_tracker.tar.gz .'
            }
        }

        stage('Deploy to EC2') {
            steps {
                // Transfer and deploy code to the deployment EC2 instance
                sshagent(credentials: ['ec2 ssh creds']) {
                    sh """
                    scp -o StrictHostKeyChecking=no expense_tracker.tar.gz ${DEPLOY_USER}@${DEPLOY_HOST}:/home/ec2-user/
                    ssh ${DEPLOY_USER}@${DEPLOY_HOST} 'tar -xzvf /home/ec2-user/expense_tracker.tar.gz -C /home/ec2-user/expense_tracker && \
                    sudo pip install -r /home/ec2-user/expense_tracker/requirements.txt && \
                    nohup python3 /home/ec2-user/expense_tracker/manage.py runserver 0.0.0.0:8000 &'
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Clean workspace after build
        }
    }
}

