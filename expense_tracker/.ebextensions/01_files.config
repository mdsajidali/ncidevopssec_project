files:
    "/etc/nginx/conf.d/proxy.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            upstream django {
                server 127.0.0.1:8000;
            }
            server {
                listen 80;
                location / {
                    proxy_pass http://django;
                    proxy_set_header Host $host;
                    proxy_set_header X-Real-IP $remote_addr;
                }
            }